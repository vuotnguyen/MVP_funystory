<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_gravity="start"
    android:layout_width="300dp"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#B0A4ACD5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_avatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/user_24" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="vuotnguyen"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_home"
                android:drawableLeft="@drawable/ic_baseline_home_24"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    Trang chủ"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />

            <TextView
                android:id="@+id/tv_libry"
                android:drawableLeft="@drawable/ic_baseline_library_books_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    Thư viện"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />

            <TextView
                android:id="@+id/tv_notifi"
                android:drawableLeft="@drawable/ic_baseline_notifications_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    Thông báo"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />

            <TextView
                android:id="@+id/tv_history"
                android:drawableLeft="@drawable/ic_baseline_history_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    Lịch sử"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nâng cao"
                android:textSize="16dp"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tv_vote"
                android:drawableLeft="@drawable/ic_baseline_star_border_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    Đánh giá"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />

            <TextView
                android:id="@+id/tv_about"
                android:drawableLeft="@drawable/ic_baseline_perm_device_information_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="    About"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_login" />

        </LinearLayout>
    </LinearLayout>

</com.google.android.material.navigation.NavigationView>